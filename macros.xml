<application>
  <component name="ActionMacroManager">
    <macro name="Format Source Code">
      <action id="$SelectAll" />
      <action id="ReformatCode" />
      <action id="EditorEscape" />
      <action id="SaveAll" />
    </macro>
    <macro name="jum to next whitespace">
      <action id="Find" />
      <action id="EditorDeleteLine" />
      <typing text-keycode="32:0">&amp;#x20;</typing>
      <shortuct text="ESCAPE" />
    </macro>
    <macro name="format copy/paste in comment">
      <typing text-keycode="32:0;106:1;32:0">&amp;#x20;*&amp;#x20;</typing>
      <action id="EditorDown" />
      <action id="EditorLineStart" />
    </macro>
    <macro name="format copy/paste inside comment block">
      <typing text-keycode="32:0;106:1;32:0">&amp;#x20;*&amp;#x20;</typing>
      <action id="EditorDown" />
      <action id="EditorLineStart" />
    </macro>
  </component>
</application>